@inject ISupplierProductService SupplierProductService
@inject IProductCategoryService ProductCategoryService
@inject ISupplierService SupplierService
@rendermode InteractiveServer

@if (_isPageLoading)
{
	<div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
		<span class="spinner-border" style="color: var(--primary-color); width: 3rem; height: 3rem;"></span>
	</div>
}
else
{
<div class="container">
    <div class="d-flex justify-content-center gap-3 mt-4">
        <StatsCard Title="Total de Produtos" Color="var(--vibrant-red)" Number="@($"{supplierProductsCount}")" IconName="package"
                   Subtitle="Produtos cadastrados" />
        <StatsCard Title="Produto mais caro" Color="var(--electric-blue)" Number="@($"R$ {highestProductPriceValue}")" IconName="dollar-sign"
                   Subtitle="@($"Produto: {highestProductPriceName}")" />
        <StatsCard Title="Produto mais barato" Color="var(--disabled-gray)" Number="@($"R$ {lowestProductPriceValue}")" IconName="dollar-sign"
                   Subtitle="@($"Produto: {lowestProductPriceName}")" />
    </div>
    <div class="mt-3">
        <div class="filter-container w-100">
            <div class="filter-header">
                <LucideIcon Name="funnel" Size="16" />
                Buscar e Filtrar Produtos
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Buscar Produto</label>
                    <div class="search-input-container">
                        <SearchBar SearchText="@searchText" PlaceHolder="Pesquise o nome de um produto"
                                   SearchTextChanged="@OnSearchChanged" />
                    </div>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Categoria</label>
                    <select class="form-select" @onchange="OnCategorySelectedChanged">
                        <option value="0" selected>Todas categorias</option>
                        @foreach (var category in categories)
                        {
                            <option @key="category.Id" value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Fornecedor</label>
                    <select class="form-select" @onchange="OnSupplierSelectedChanged">
                        <option value="0" selected>Todos fornecedores</option>
                        @foreach (var supplier in suppliers)
                        {
                            <option @key="supplier.Id" value="@supplier.Id">@supplier.TradeName</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="container-table mt-4">
        <div class="header">
            <div>
                <div>
                    <span style="color: var(--vibrant-red);">
                        <LucideIcon Name="package" Size="24" />
                    </span>
                    <span class="ms-1 fw-medium">Produtos</span>
                </div>
                <p class="mt-3">Gerencie os produtos dos fornecedores</p>
            </div>
            <div class="actions d-flex">
                <button class="btn secondary">⭳ Exportar</button>
                <AddButtonTable OnClick="@ShowCreateModal" Text="Produto" />
            </div>
        </div>

        <AlertBox @ref="@alertBox" Message="@alertMessage" Type="@alertType" />

        <div class="table-wrapper mt-2">
            <table class="mb-4">
                <thead>
                    <tr>
                        <th @onclick="@(() => SortBy("name"))" style="cursor: pointer">
                            Nome
                            <LucideIcon Name="chevron-down" />
                        </th>
                        <th class="table-description" @onclick="@(() => SortBy("supplier"))" style="cursor: pointer">
                            Fornecedor
                            <LucideIcon Name="chevron-down" />
                        </th>
                        <th @onclick="@(() => SortBy("price"))" style="cursor: pointer">
                            Preço
                            <LucideIcon Name="chevron-down" />
                        </th>
                        <th @onclick="@(() => SortBy("category"))" style="cursor: pointer">
                            Categoria
                            <LucideIcon Name="chevron-down" />
                        </th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!supplierProducts.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <div>
                                    <LucideIcon Name="package" Size="48" class="mb-2" />
                                    <p>Nenhum produto encontrado</p>
                                    <small>Clique em "Adicionar produto" para criar o primeiro produto para um fornecedor</small>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var product in supplierProducts)
                        {
                            
                            <tr @key="@product.Id">

                                <td><strong>@product.Name</strong></td>
                                <td class="text-muted table-description">@product.Supplier.TradeName</td>
                                <td>@($"R$ {product.Price}")</td>
                                <td>@product.ProductCategory.Name</td>                       
                                <td>
                                    <div class="d-flex justify-content-center">
                                        <button class="icon-btn">
                                            <LucideIcon Name="eye" Size="18" />
                                        </button>
                                        <button @onclick="() => ShowEditModal(product.Id)" class="icon-btn">
                                            <LucideIcon Name="pencil" Size="18" />
                                        </button>
                                        <button @onclick="() => ShowDeleteModal(product.Id)" class="icon-btn text-danger">
                                            <LucideIcon Name="trash-2" Size="18" />
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- Informações de paginação e navegação -->
        <div class="d-flex justify-content-between align-items-center mt-3">
            <!-- Informações sobre linhas por tabela -->
            <div class="text-muted small">
                Mostrando @supplierProducts.Count() de @totalRecords fornecedores
            </div>

            <!-- Paginação -->
            @if (totalPages > 1)
            {
                <TablePaginator Page="@currentPage"
                                TotalPages="@totalPages"
                                OnPageChanged="HandlePageChanged" />
            }
        </div>

    </div>
</div>
}

<CreateSupplierProductModal @ref="@createSupplierProductModal" OnValidSubmit="HandleValidCreateSubmit" />

<EditSupplierProductModal @ref="@editSupplierProductModal" OnSave="HandleValidEditSubmit" />

<ConfirmDialog @ref="confirmDeleteDialog" 
               Title="Excluir produto"
               BodyMessage="Tem certeza que deseja excluir este produto?"
               OnConfirmed="HandleDeleteSubmit"/>

@code {
    private IEnumerable<SupplierProduct> supplierProducts = [];
    private IEnumerable<ProductCategory> categories = [];
    private IEnumerable<Supplier> suppliers = [];
    private string searchText = string.Empty;

    private string sortColumn = "name";
    private string sortOrder = "asc";
    private int currentPage = 1;
    private int totalPages;
    private int totalRecords;
    private long categoryId;
    private long supplierId;

    private long idToDelete;
    private AlertBox alertBox = null!;
    private CreateSupplierProductModal createSupplierProductModal = null!;
    private EditSupplierProductModal editSupplierProductModal = null!;
    private ConfirmDialog confirmDeleteDialog = null!;
    private string alertMessage = string.Empty;
    private string alertType = AlertBoxType.Info;

    private decimal highestProductPriceValue;
    private string highestProductPriceName = string.Empty;

    private decimal lowestProductPriceValue;
    private string lowestProductPriceName = string.Empty;

    private int supplierProductsCount;
    private bool _isPageLoading;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _isPageLoading = true;

            var loadCardsInfo = CardsInfosDisplay();
            var loadProducts = GetAllSupplierProductsAsync();
            var loadSuppliersAndCategories = GetSuppliersAndCategoriesAsync();

            await Task.WhenAll(loadCardsInfo, loadProducts, loadSuppliersAndCategories);
        }
        finally
        {
            _isPageLoading = false;
        }
    }

    #region DatabaseMethods

    private async Task GetAllSupplierProductsAsync()
    {
        try
        {
            SupplierProductFilter filter = new(searchTerm: searchText, categoryId: categoryId, supplierId: supplierId);

            QueryOptions queryOptions = new(
                Page: currentPage,
                PageSize: 5,
                SortColumn: sortColumn,
                SortOrder: sortOrder,
                SearchTerm: filter.SearchTerm);

            PagedResult<SupplierProduct> result = await SupplierProductService.GetProductByFilter(
                options: queryOptions, 
                filter: filter,
                CancellationToken);

            supplierProducts = result.Items;
            totalPages = result.TotalPages;
            totalRecords = result.TotalCount;

            if (currentPage > totalPages && totalPages > 0)
            {
                currentPage = totalPages;
                await GetAllSupplierProductsAsync(); // Recarregar com a página corrigida
            }


        }
        catch (Exception)
        {
            throw;
        }
    }

    private async Task GetSuppliersAndCategoriesAsync()
    {
        var resultCategories = await ProductCategoryService.GetAllAsync(cancellationToken: CancellationToken);
        categories = resultCategories.Items;
        
        var resultSuppliers = await SupplierService.GetAllAsync(cancellationToken: CancellationToken);
        suppliers = resultSuppliers.Items;

    }

    private async Task HandleValidCreateSubmit(SupplierProduct supplierProductObj)
    {
        try
        {
            var result = await SupplierProductService.AddAsync(supplierProductObj, CancellationToken);

            if (result.IsFailure)
            {
                alertMessage = result.Error.Description!;
                alertType = AlertBoxType.Warning;
                alertBox.Open();
                return;
            }

            await GetAllSupplierProductsAsync();
        }
        catch (Exception)
        {
            throw;
        }
    }

    private async Task HandleValidEditSubmit(SupplierProduct supplierProductObj)
    {
        try
        {
            var result = await SupplierProductService.UpdateAsync(supplierProductObj, CancellationToken);

            if (result.IsFailure)
            {
                alertMessage = result.Error.Description!;
                alertType = AlertBoxType.Warning;
                alertBox.Open();
                return;
            }

            await GetAllSupplierProductsAsync();
        }
        catch (Exception)
        {
            throw;
        }
    }

    private async Task HandleDeleteSubmit()
    {
        try
        {
            var result = await SupplierProductService.DeleteAsync(idToDelete, CancellationToken);

            if (result.IsFailure)
            {
                // show alert box
            }
            
            idToDelete = 0;
            await GetAllSupplierProductsAsync();
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            throw;
        }
    }
    
    #endregion

    #region InteractivityMethods
    private async Task ShowCreateModal()
    {
        await createSupplierProductModal.Open();
    }

    private async Task ShowEditModal(long id)
    {
        await editSupplierProductModal.Open(id);
    }

    private Task ShowDeleteModal(long id)
    {
        idToDelete = id;
        confirmDeleteDialog.Open();

        return Task.CompletedTask;
    }

    private async Task OnCategorySelectedChanged(ChangeEventArgs e)
    {
        if (long.TryParse(e.Value?.ToString(), out var id))
        {
            categoryId = id;
            await OnCategoryChanged(id);
        }
    }

    private async Task OnSupplierSelectedChanged(ChangeEventArgs e)
    {
        if(long.TryParse(e.Value?.ToString(), out var id))
        {
            supplierId = id;
            await OnSupplierChanged(id);
        }
    }

    private async Task OnSupplierChanged(long value)
    {
        supplierId = value;
        currentPage = 1;
        await Debounce(GetAllSupplierProductsAsync);
    } 

    private async Task OnCategoryChanged(long value)
    {
        categoryId = value;
        currentPage = 1;
        await Debounce(GetAllSupplierProductsAsync);
    }

    private async Task HandlePageChanged(int newPage)
    {
        if (newPage >= 1 && newPage <= totalPages)
        {
            currentPage = newPage;
            await GetAllSupplierProductsAsync();
        }
    }

    private async Task OnSearchChanged(string value)
    {
        searchText = value;
        currentPage = 1;
        await Debounce(GetAllSupplierProductsAsync);
    }

    private async Task SortBy(string columnName)
    {
        if (sortColumn == columnName)
        {
            sortOrder = sortOrder == "asc" ? "desc" : "asc";
        }
        else
        {
            sortColumn = columnName;
            sortOrder = "asc";
        }

        currentPage = 1;
        await GetAllSupplierProductsAsync();
    }

    private async Task CardsInfosDisplay()
    {
        var allWithoutPaginationResult = await SupplierProductService.GetAllAsync(cancellationToken: CancellationToken);

        var allWithoutPagination = allWithoutPaginationResult.Items;
        
        var products = allWithoutPagination as SupplierProduct[] ?? allWithoutPagination.ToArray();
        
        if(products.Any())
        {
            supplierProductsCount = products.Count();

            var highestPrice = products.Max(p => p.Price);
            var highestProductPrice = products.First(p => p.Price == highestPrice);

            var lowestPrice = products.Min(p => p.Price);
            var lowestPriceProduct = products.First(p => p.Price == lowestPrice);

            highestProductPriceValue = highestProductPrice.Price;
            highestProductPriceName = highestProductPrice.Name;

            lowestProductPriceValue = lowestPriceProduct.Price;
            lowestProductPriceName = lowestPriceProduct.Name;            
        }

    }
    #endregion
}
