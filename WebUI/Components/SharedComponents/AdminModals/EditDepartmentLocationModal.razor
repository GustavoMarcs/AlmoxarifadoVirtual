@inject IDepartmentLocationService DepartmentLocationService
@rendermode InteractiveServer

@if (Show)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <EditForm Model="DepartmentLocation" OnValidSubmit="HandleValidSubmit">
                    
                    <FluentValidationValidator @ref="fluentValidationValidator"/>
                    
                    <div class="modal-header">
                        <h5 class="modal-title">Editar Localização</h5>
                        <button type="button" class="btn-close" @onclick="OnCancel" aria-label="Close"></button>
                    </div>
                    
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Nome</label>
                            <InputText
                                      class="form-control"
                                      @bind-Value="DepartmentLocation.Name" 
                                      placeholder="Nome da localização" />
                            <ValidationMessage For="@(() => DepartmentLocation.Name)" class="invalid-feedback" />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Descrição</label>
                            <InputText 
                                      class="form-control"
                                      @bind-Value="DepartmentLocation.Description" 
                                      placeholder="Descrição da localização" />
                            <ValidationMessage For="@(() => DepartmentLocation.Description)" class="invalid-feedback" />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Capacidade</label>
                            <InputNumber
                                        class="form-control"
                                        @bind-Value="DepartmentLocation.Capacity" 
                                        placeholder="Capacidade máxima da localização" />
                            <ValidationMessage For="@(() => DepartmentLocation.Capacity)" class="invalid-feedback" />
                        </div>
                        
                        <div class="form-check">
                            <InputCheckbox class="form-check-input"
                                          @bind-Value="DepartmentLocation.IsActive" />
                            <label class="form-check-label" for="locationActive">
                                Localização ativa
                            </label>
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="OnCancel">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    [SupplyParameterFromForm]
    private DepartmentLocation DepartmentLocation { get; set; } = new();

    private FluentValidationValidator? fluentValidationValidator;

    [Parameter] public EventCallback<DepartmentLocation> OnSave { get; set; }

    public bool Show { get; private set; }

    public async Task Open(long departmentLocationId)
    {
        var location = await DepartmentLocationService.GetByIdAsync(departmentLocationId, CancellationToken);

        if(location is not null)
        {
            DepartmentLocation = location;
            Show = true;
        }
    }

    private void OnCancel()
    {
        Show = false;
    }

    private async Task HandleValidSubmit()
    {
        if (await fluentValidationValidator!.ValidateAsync())
        {
            await OnSave.InvokeAsync(DepartmentLocation);
            Show = false;
        }
    }
}
