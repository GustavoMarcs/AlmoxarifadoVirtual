<div class="card-container @Class @(Disabled ? "disabled" : "")" style="@Style">
    @if(CardHeader is not null)
    {
        <div class="card-header @HeaderClass" style="@HeaderStyle">
            @CardHeader
        </div>
    }
    @if(CardBody is not null)
    {
        <div class="card-body @BodyClass" style="@BodyStyle">
            @CardBody
        </div>
    }
</div>

@code {
    [Parameter] public RenderFragment? CardHeader { get; set; }
    [Parameter] public RenderFragment? CardBody { get; set; }
    
    [Parameter] public bool Disabled { get; set; }
    
    [Parameter] public string? Class { get; set; }
    [Parameter] public string? Style { get; set; }

    [Parameter] public string? HeaderClass { get; set; }
    [Parameter] public string? HeaderStyle { get; set; }

    [Parameter] public string? BodyClass { get; set; }
    [Parameter] public string? BodyStyle { get; set; }
}
